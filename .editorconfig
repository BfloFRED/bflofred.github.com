; EditorConfig is awesome: http://EditorConfig.org

; top-most EditorConfig file
root = true

; Line Endings
; Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = false

; HTML
[*.html]
indent_style = space
indent_size = 4

; CSS
[*.css]
indent_style = space
indent_size = 4

; Javascript
[*.js]
indent_style = space
indent_size = 4